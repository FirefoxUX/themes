{
  "source": ["tokens/**/*.json"],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "buildPath": "build/css/",
      "transforms": ["attribute/cti", "name/cti/kebab", "size/rem", "color/hsl"], 
      "files": [{
        "destination": "_variables.css",
        "format": "css/variables"
      }]
    }
  }
}
